<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.example.demo.models.WeatherEntity" table="weather" schema="sbertech_db">
        <id name="id" column="id" type="java.lang.Long"/>
        <property name="day" column="day" type="java.sql.Date"/>
        <property name="time" column="time" type="java.sql.Time"/>
        <property name="city" column="city" type="java.lang.String"/>
        <property name="temperature" column="temperature" type="java.lang.Float"/>
    </class>
</hibernate-mapping>